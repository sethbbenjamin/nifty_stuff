<%= form_for @post do |f| %>

  <% if @post.errors.any? %>
    The post contains <%= pluralize(@post.errors.count, "error") %>
  <ul>
    <% @post.errors.full_messages.each do |err| %>
    <li><%= err %></li>
    <% end %>
  </ul>
  <% end %>


  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, class: "form-control" %><br>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description, class: "form-control" %><br>
  </p>
   <p>
    <%= f.label :link %><br>
    <%= f.text_field :link, class: "form-control" %><br>
  </p> 
  <p>
    <%= link_to "Cancel", root_path, class: "btn btn-default" %>
    <%= f.submit "Share!", class: "btn btn-default" %><br>
  </p>
<% end %>
